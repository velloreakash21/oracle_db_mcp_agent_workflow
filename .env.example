# ===========================================
# CODE ASSISTANT - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -----------------------------------------
# LLM API KEY (Required)
# -----------------------------------------
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# -----------------------------------------
# TAVILY SEARCH API KEY (Required)
# -----------------------------------------
# Get your FREE key from: https://tavily.com/
# Free tier: 1000 searches/month
TAVILY_API_KEY=your-tavily-api-key-here

# -----------------------------------------
# ORACLE DATABASE
# -----------------------------------------
# These match the docker-compose.yml defaults
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE=FREEPDB1
ORACLE_USER=codeassist
ORACLE_PASSWORD=CodeAssist123

# -----------------------------------------
# OPENTELEMETRY
# -----------------------------------------
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=code-assistant

# -----------------------------------------
# DEBUG MODE
# -----------------------------------------
DEBUG=false
